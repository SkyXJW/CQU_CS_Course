<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/second" android:orientation="vertical" tools:context=".MainActivity">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/title"> </ImageView>
<!--    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:textSize="30sp" android:textColor="#0000FF" android:layout_marginBottom="10dp" android:text="24 Point Game"/>-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:orientation="horizontal">
        <ImageView android:id="@+id/imageView1" android:layout_width="80dp" android:layout_height="100dp" android:layout_marginLeft="18dp" app:srcCompat="@drawable/ok"/>
        <ImageView android:id="@+id/imageView2" android:layout_width="80dp" android:layout_height="100dp" android:layout_marginLeft="18dp" app:srcCompat="@drawable/ok"/>
        <ImageView android:id="@+id/imageView3" android:layout_width="80dp" android:layout_height="100dp" android:layout_marginLeft="18dp" app:srcCompat="@drawable/ok"/>
        <ImageView android:id="@+id/imageView4" android:layout_width="80dp" android:layout_height="100dp" android:layout_marginLeft="18dp" app:srcCompat="@drawable/ok"/>
    </LinearLayout>
<!--    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="left" android:textSize="30sp" android:layout_marginTop="10dp" android:text="请选择4张扑克牌"/>-->

    <FrameLayout android:id="@+id/clublayout" android:layout_width="match_parent" android:layout_height="130dp" android:layout_marginTop="10dp" android:padding="10dp">
        <ImageView
            android:id="@+id/club"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="310dp"
            app:srcCompat="@drawable/meihua" />
    </FrameLayout>
    <FrameLayout android:id="@+id/heartlayout" android:layout_width="match_parent" android:layout_height="130dp" android:padding="10dp">

        <ImageView
            android:id="@+id/heart"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="310dp"
            app:srcCompat="@drawable/hongtao" />
    </FrameLayout>
    <FrameLayout android:id="@+id/spadelayout" android:layout_width="match_parent" android:layout_height="130dp" android:padding="10dp">

        <ImageView
            android:id="@+id/spade"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="310dp"
            app:srcCompat="@drawable/heitao" />
    </FrameLayout>
    <FrameLayout android:id="@+id/diamondlayout" android:layout_width="match_parent" android:layout_height="130dp" android:padding="10dp">

        <ImageView
            android:id="@+id/diamond"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="310dp"
            app:srcCompat="@drawable/fangkuai" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        />

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp" android:orientation="horizontal">
        <Button
            android:id="@+id/cal"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:backgroundTint="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="计算" />
        <Button
            android:id="@+id/res"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:backgroundTint="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="重置" />
    </LinearLayout>

</LinearLayout>
