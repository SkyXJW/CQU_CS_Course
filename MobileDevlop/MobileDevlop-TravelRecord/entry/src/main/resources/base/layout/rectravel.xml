<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:id="$+id:father">

<ScrollView
    ohos:height="match_parent"
    ohos:width="match_parent">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="10vp"
            >
            <Image
                ohos:id="$+id:back"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:back"/>
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:orientation="horizontal"
                ohos:left_margin="170vp">
                <Text
                    ohos:id="$+id:finishrec"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:element_left="$media:quguo"
                    >
                </Text>
                <Text
                    ohos:id="$+id:finishplan"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:element_left="$media:jihua"
                    >
                </Text>
            </DirectionalLayout>
        </DirectionalLayout>
        <Image
            ohos:height="6vp"
            ohos:width="match_parent"
            ohos:image_src="$media:line"
            ohos:top_margin="5vp">
        </Image>
        <ScrollView
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:id="$+id:addpicdir"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:orientation="horizontal"
                >
                <Image
                    ohos:id="$+id:addpic"
                    ohos:height="75vp"
                    ohos:width="75vp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:add_pic"/>
            </DirectionalLayout>
        </ScrollView>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            >
            <Image
                ohos:id="$+id:map_pic"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:map"
                />
        <Text
            ohos:id="$+id:map"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:multiple_lines="false"
            ohos:max_text_lines="1"
            ohos:top_margin="15vp"
            ohos:text="未选择"
            ohos:truncation_mode="ellipsis_at_end"
            ohos:text_size="25vp"
            ohos:text_color="#D50088FF"
            />
        </DirectionalLayout>
        <Image
            ohos:height="6vp"
            ohos:width="match_parent"
            ohos:image_src="$media:line">
        </Image>
        <TextField
            ohos:id="$+id:title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="5vp"
            ohos:top_margin="5vp"
            ohos:hint="写下你的标题"
            ohos:text_size="25vp"
            />
        <Image
            ohos:height="6vp"
            ohos:width="match_parent"
            ohos:image_src="$media:line">
        </Image>
        <TextField
            ohos:id="$+id:des"
            ohos:height="250vp"
            ohos:width="match_parent"
            ohos:left_margin="5vp"
            ohos:hint="记录这一刻......"
            ohos:text_alignment="top"
            ohos:text_size="25vp"
            ohos:max_text_lines="10"
            />
        <Image
            ohos:height="6vp"
            ohos:width="match_parent"
            ohos:image_src="$media:line">
        </Image>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            >
            <Image
                ohos:id="$+id:chosedate_pic"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:date"
                />
        <Text
            ohos:id="$+id:chosedate"
            ohos:top_margin="15vp"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:truncation_mode="ellipsis_at_end"
            ohos:multiple_lines="false"
            ohos:max_text_lines="1"
            ohos:text_size="25vp"
            ohos:text_color="#D50088FF"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Image
                ohos:id="$+id:chosecity_pic"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:city"
                />
        <Text
            ohos:id="$+id:chosecity"
            ohos:top_margin="15vp"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:truncation_mode="ellipsis_at_end"
            ohos:multiple_lines="false"
            ohos:max_text_lines="1"
            ohos:text="城市"
            ohos:text_size="25vp"
            ohos:text_color="#D50088FF"/>
        </DirectionalLayout>
    </DirectionalLayout>
</ScrollView>
</DirectionalLayout>