<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:id="$+id:main">


    <DirectionalLayout
        ohos:id="$+id:buttons"
        ohos:top_margin="200vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="vertical">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal">
            <Image
                ohos:id="$+id:tobuild_pic"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:xinzeng"
                />
            <Text
                ohos:id="$+id:tobuild"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="15vp"
                ohos:text_color="#F75050"
                ohos:text="新增"
                ohos:text_size="25vp"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            >
            <Image
                ohos:id="$+id:toview_pic"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:quguo"
                />
            <Text
                ohos:id="$+id:toview"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="15vp"
                ohos:text_color="#33CCFF"
                ohos:text="去过"
                ohos:text_size="25vp"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            >
            <Image
                ohos:id="$+id:toplan_pic"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:jihua"
                />
            <Text
                ohos:id="$+id:toplan"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="15vp"
                ohos:text_color="#FFC700"
                ohos:text="计划"
                ohos:text_size="25vp"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            >
            <DirectionalLayout
                ohos:id="$+id:frame"
                ohos:height="match_content"
                ohos:width="match_content"
                />
            <Text
                ohos:id="$+id:towait"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="5vp"
                ohos:top_margin="5vp"
                ohos:text_color="#6B0306"
                ohos:text="待续"
                ohos:text_size="25vp"
                />
        </DirectionalLayout>
    </DirectionalLayout>


</DirectionalLayout>