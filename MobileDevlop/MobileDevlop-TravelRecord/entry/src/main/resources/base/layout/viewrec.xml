<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="$graphic:main_bk">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="horizontal">
                <Image
                    ohos:top_margin="5vp"
                    ohos:id="$+id:back"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:back"/>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:alignment="right"
                    ohos:right_margin="10vp">
                    <Image
                        ohos:top_margin="10vp"
                        ohos:id="$+id:like"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:scale_mode="stretch"
                        ohos:image_src="$media:unlike"/>
                    <Image
                        ohos:top_margin="10vp"
                        ohos:left_margin="10vp"
                        ohos:id="$+id:city"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:scale_mode="stretch"
                        ohos:image_src="$media:city"/>
                    <Image
                        ohos:top_margin="10vp"
                        ohos:left_margin="10vp"
                        ohos:id="$+id:date"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:scale_mode="stretch"
                        ohos:image_src="$media:date"/>
                </DirectionalLayout>
            </DirectionalLayout>
            <Image
                ohos:height="6vp"
                ohos:width="match_parent"
                ohos:image_src="$media:line"
                ohos:top_margin="5vp">
            </Image>
            <DirectionalLayout
                ohos:id="$+id:details"
                ohos:height="match_content"
                ohos:width="match_parent">
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:top_margin="15vp">
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_size="28vp"
                    ohos:text_font="monospace"
                    ohos:text_color="#FEB633"
                    ohos:italic="true"
                    ohos:text="到底啦~"
                    />
            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>

</DirectionalLayout>