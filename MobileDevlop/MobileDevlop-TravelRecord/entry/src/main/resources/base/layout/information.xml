<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="#555655">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:main_bk"
            ohos:orientation="vertical"
            >
            <DirectionalLayout
                ohos:id="$+id:firstpic"
                ohos:height="200vp"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                >
                <Image
                    ohos:id="$+id:inbk"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:back"
                    />
                <Text
                    ohos:id="$+id:intitle"
                    ohos:height="28vp"
                    ohos:width="match_parent"
                    ohos:text_size="30vp"
                    ohos:left_margin="10vp"
                    ohos:top_margin="100vp"
                    ohos:text_color="#40839B"
                    ohos:text="这是标题"
                    />
            </DirectionalLayout>
            <DirectionalLayout
                ohos:top_margin="10vp"
                ohos:height="match_content"
                ohos:width="match_parent"
                >
                <Text
                    ohos:left_margin="10vp"
                    ohos:id="$+id:indate"
                    ohos:height="match_content"
                    ohos:right_margin="10vp"
                    ohos:width="match_parent"
                    ohos:multiple_lines="true"
                    ohos:text_color="#50E3C2"
                    ohos:text_size="18vp"
                    ohos:text="这是时间描述"
                    />
                <Text
                    ohos:top_margin="10vp"
                    ohos:left_margin="10vp"
                    ohos:id="$+id:inweather"
                    ohos:right_margin="10vp"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:multiple_lines="true"
                    ohos:text_size="25vp"
                    ohos:text_color="#56A855"
                    ohos:text="这是天气描述"
                    />
                <Text
                    ohos:top_margin="10vp"
                    ohos:left_margin="10vp"
                    ohos:id="$+id:insitdes"
                    ohos:height="match_content"
                    ohos:right_margin="10vp"
                    ohos:width="match_parent"
                    ohos:multiple_lines="true"
                    ohos:text_color="#9B9851"
                    ohos:text_size="25vp"
                    ohos:text="这是位置描述"
                    />
            </DirectionalLayout>
            <DirectionalLayout
                ohos:top_margin="15vp"
                ohos:id="$+id:inaddpic"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                >
                <Text
                    ohos:id="$+id:indes"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text_size="22vp"
                    ohos:text_color="#7E4E52"
                    ohos:left_margin="10vp"
                    ohos:right_margin="10vp"
                    ohos:text="这里填写备注"
                    ohos:multiple_lines="true"
                    />

            </DirectionalLayout>

        </DirectionalLayout>

    </ScrollView>

</DirectionalLayout>